<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_fav_listitme_character"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:background="@drawable/shape"
    android:layout_margin="20dp"
>

    <TextView
        android:id="@+id/tv_fav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="@dimen/starwar_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tv_fav_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="@color/white"
        android:layout_margin="@dimen/starwar_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fav_name" />

    <TextView
        android:id="@+id/tv_fav_ships"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ships:"
        android:textColor="@color/white"
        android:layout_margin="@dimen/starwar_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fav_gender" />

    <TextView
        android:id="@+id/tv_fav_films"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Films:"
        android:textColor="@color/white"
        android:textFontWeight="@integer/material_motion_duration_short_1"
        android:layout_margin="@dimen/starwar_margin"
        android:paddingRight="@dimen/starwar_padding"
        android:inputType="textMultiLine"
        android:maxLines="7"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fav_ships" />

</androidx.constraintlayout.widget.ConstraintLayout>